---
import SocialIcons from '../SocialIcons.astro';
import Title from '../atoms/Title.astro';
import TextInput from '../atoms/TextInput.astro';
import EmailContactInput from '../atoms/EmailContactInput.astro';
import TextAreaInput from '../atoms/TextAreaInput.astro';
import "./contact.css";
---

<section id="contact" class="contact">
	<div class="contact__container">

		<div class="contact__content">
			<Title margin="1rem" content="Contact Me" />

			
      <div class="flex flex-col rounded-xl p-2 sm:p-3 lg:p-4">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
        Hire Me, Ask Me, or Just Say Hi!
        </h2>
        <form action="https://formsubmit.co/arzunkoirala@gmail.com" method="POST">
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-firstname-contacts"
                label="First Name"
                name="name"
              />
              <TextInput
                id="hs-lastname-contacts"
                label="Last Name"
                name="lastname"
              />
            </div>
            <EmailContactInput id="hs-email-contacts" />
            <TextAreaInput
              id="hs-about-contacts"
              label="Details"
              name="message"
            />
			<input type="hidden" name="_next" value="https://arzunkoirala.github.io" />
          </div>

          <div class="mt-4 grid">
			<button
			  type="submit"
			  class="py-3 mt-4 text-white bg-blue-900 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring focus:ring-primary-400 w-[25%] mx-auto"
			>
			  Send
			</button>
          </div>

          <div class="mt-3 text-center">
            <p class="text-l text-neutral-600 dark:text-neutral-400">
              I'll get back to you as soon as possible!
            </p>
          </div>
        </form>
      </div>

      
  </div>
		</div>
	</div>

</section>
